<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".ElCortijillo_App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_removebg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_removebg"
        android:supportsRtl="true"
        android:theme="@style/Theme.El_Cortijillo.NoActionBar">
        <activity
            android:theme="@style/Theme.El_Cortijillo"
            android:name=".UI.Views.Cesta.Cesta_Activity"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Valoraciones.Valoraciones_Activity"
            android:exported="false" />
        <activity
            android:name=".UI.Views.BocadillosPersonalizados.BocadillosPersonalizados_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:name=".UI.Views.Configuracion.Configuracion_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:theme="@style/Theme.El_Cortijillo"
            android:name=".UI.Views.Productos.ProductoDetalles_Activity"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Pizzas.Pizzas_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:name=".UI.Views.Hamburguesas.Hamburguesas_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:name=".UI.Views.Bebidas.Bebidas_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:name=".UI.Views.Bocadillos.Bocadillos_Activity"
            android:exported="false"
            android:theme="@style/Theme.El_Cortijillo" />
        <activity
            android:name=".UI.Views.SplashScreen.SplashScreen_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Views.PantallaPrincipal.PantallaPrincipal_Activity"
            android:exported="true"
            android:label="@string/title_activity_pantalla_principal"
            android:theme="@style/Theme.El_Cortijillo.NoActionBar" />
        <activity
            android:name=".UI.Views.Registro.Registro_Activity"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Login.Login_Activity"
            android:exported="false" />
        <activity
            android:name=".UI.Views.Bienvenida.Bienvenida_Activity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>